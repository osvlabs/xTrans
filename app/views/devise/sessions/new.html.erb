<div class="ui middle aligned center aligned grid login-window">
  <div class="column">
    <h2 class="ui teal image header">
      <img src=<%= asset_path 'logo.png' %> class="image">
      <div class="content">
        Dashboard
      </div>
    </h2>

    <%= form_for(resource, :html => {:class => "ui large form" }, as: resource_name, url: session_path(resource_name)) do |f| %>
    <!-- <form class="ui large form"> -->
      <div class="ui stacked segment">

        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, :placeholder => "Email", autofocus: true %>
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, :placeholder => "Password", autocomplete: "off" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Login", class: "ui fluid large teal submit button" %>
        </div>

      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field ui checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, :class => "ui teal header"%>
        </div>
      <% end %>

      <div class="ui error message"></div>

    <!-- </form> -->
    <% end %>

    <div class="ui message">
      <%= render "devise/shared/links" %>
      <!-- New to us? <a href="#">Sign Up</a> -->
    </div>
  </div>
</div>
