<div class="ui middle aligned center aligned grid login-window">
  <div class="column">
    <h2 class="ui teal image header">
      <img src="https://placeholdit.imgix.net/~text?txtsize=9&txt=100%C3%97100&w=100&h=100" class="image">
      <div class="content">
        Log-in to your account
      </div>
    </h2>

    <%= form_for(resource, :html => {:class => "ui large form" }, as: resource_name, url: session_path(resource_name)) do |f| %>
    <!-- <form class="ui large form"> -->
      <div class="ui stacked segment">

        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true %>
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "Log in", class: "ui fluid large teal submit button" %>
        </div>
        <!-- <div class="ui fluid large teal submit button">Login</div> -->
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="ui error message"></div>

    <!-- </form> -->
    <% end %>

    <div class="ui message">
      <%= render "devise/shared/links" %>
      <!-- New to us? <a href="#">Sign Up</a> -->
    </div>
  </div>
</div>
