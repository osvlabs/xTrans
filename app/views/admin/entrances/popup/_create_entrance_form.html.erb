<div class="ui modal add-xtrans-form">
  <i class="close icon"></i>
  <div class="header">
    创建入口节点
  </div>
  <div class="content">
    <%= form_for @entrance, url: {action: "create"}, html: {class: "ui form"} do |f| %>
      <div class="field">
        <label>描述</label>
        <%= f.text_field :name, :required => true, :placeholder => '输入入口名称' %>
      </div>
      <div class="field">
        <label>域名</label>
        <%= f.text_field :domain, :required => true, :placeholder => '域名' %>
      </div>
      <div class="field">
        <label>入口IP地址</label>
        <%= f.text_field :ip, :required => true,
          :pattern => '((^|\.)((25[0-5])|(2[0-4]\d)|(1\d\d)|([1-9]?\d))){4}$',
          :placeholder => '入口服务器IP地址' %>
      </div>
      <div class="field">
        <label>端口</label>
        <%= f.text_field :port, :required => true, :placeholder => '入口服务器端口' %>
      </div>
      <%= f.hidden_field :status, :value => 1 %>
      <%= button_tag(type: 'submit', class: "ui positive labeled icon button") do %>
        <i class="checkmark icon"></i> 提交
      <% end %>
    <% end %>
  </div>
</div>
